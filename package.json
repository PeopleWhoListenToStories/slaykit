    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "sass": "^1.72.0",
    "vite": "^5.2.7",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "^3.8.1"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
